static void CheckInGuest(Room singleRoom, Room doubleRoom, Room suite)
    {
        // Skapa ett objekt av klassen Guest
        Console.Write("Skriv in ditt namn: ");
        string name = Console.ReadLine();
        Console.Write("Skriv in din ålder: ");
        int age = int.Parse(Console.ReadLine());

        Guest guest = new Guest(name, age);

        // Tilldela gästen till ett rum via prompt
        AssignRoomToGuest(guest, singleRoom, doubleRoom, suite);

        // Visa information om gästen
        guest.DisplayInfo();
    }
