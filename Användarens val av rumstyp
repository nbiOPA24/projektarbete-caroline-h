switch (choice)
            {
                case 1:
                    if (!singleRoom.IsOccupied)
                    {
                        singleRoom.AssignGuest(guest);
                        assigned = true;
                    }
                    else
                    {
                        Console.WriteLine("Single Room är redan taget. Välj ett annat rum.");
                    }
                    break;
                case 2:
                    if (!doubleRoom.IsOccupied)
                    {
                        doubleRoom.AssignGuest(guest);
                        assigned = true;
                    }
                    else
                    {
                        Console.WriteLine("Double Room är taget. Välj ett annat rum.");
                    }
                    break;
                case 3:
                    if (!suite.IsOccupied)
                    {
                        suite.AssignGuest(guest);
                        assigned = true;
                    }
                    else
                    {
                        Console.WriteLine("Suite är redan taget. Välj ett annat rum.");
                    }
                    break;
                default:
                    Console.WriteLine("Invalid choice. Please choose a valid room type.");
                    break;
            }
        }
    }
}


